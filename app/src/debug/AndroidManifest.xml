<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="jp.edainc.androidsamplesjava">

    <application>

        <activity
            android:name=".Activity_Test"
            android:label="${configurationName}"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <!-- ホーム画面にランチャーとして追加される -->
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity_TextToSpeech"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Activity_SpeechRecognizer"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Activity_VerticalPagingTest"
            android:theme="@style/AppTheme" />

    </application>

</manifest>